@model IEnumerable<LlamaStoreService.Models.Auditos.Auditoria>

@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/Dashboard.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="sidebar-brand">
                        <span class="logo-icon"><i class="fas fa-store-alt"></i></span>
                        <span class="logo-text">LlamaStore</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Administrador/Dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaProductos">
                                <i class="fas fa-mobile-alt"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaAccesorios">
                                <i class="fas fa-headphones"></i> Accesorios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaUsuarios">
                                <i class="fas fa-users"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaVentas">
                                <i class="fas fa-receipt"></i> Ventas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaReportes">
                                <i class="fas fa-chart-bar"></i> Reportes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-0">
                <!-- Top Navbar -->
                <nav class="navbar-top">
                    <div class="container-fluid">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-sm d-md-none" type="button">
                                <i class="fas fa-bars"></i>
                            </button>
                            <div class="ms-3 d-none d-md-block">
                                <h6 class="mb-0">Bienvenido de vuelta, <strong>Admin</strong></h6>
                                <small class="text-muted">Último acceso: Hoy, 10:30 AM</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="dropdown me-3">
                                <button class="btn btn-light dropdown-toggle" type="button" id="notificationsDropdown"
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-bell"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        3
                                    </span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
                                    <li>
                                        <h6 class="dropdown-header">Notificaciones</h6>
                                    </li>
                                    <li><a class="dropdown-item" href="#">Nueva orden recibida</a></li>
                                    <li><a class="dropdown-item" href="#">Producto agotado</a></li>
                                    <li><a class="dropdown-item" href="#">Mensaje nuevo</a></li>
                                </ul>
                            </div>
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle d-flex align-items-center text-decoration-none"
                                   id="userDropdown" data-bs-toggle="dropdown">
                                    <img src="https://randomuser.me/api/portraits/men/32.jpg" class="user-avatar me-2">
                                    <span class="d-none d-md-inline">Admin User</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Perfil</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-cog me-2"></i>
                                            Configuración
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-sign-out-alt me-2"></i>
                                            Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Dashboard Content -->
                <div class="main-content">
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Productos/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        </ol>
                    </nav>

                    <h2 class="page-title">Resumen General</h2>

                    <!-- Stats Cards -->
                    <div class="row mb-4">
                        <div class="col-md-6 col-lg-3">
                            <div class="card stat-card">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value">$12,345</div>
                                        <div class="stat-label">Ventas Totales</div>
                                        <small class="text-success">
                                            <i class="fas fa-arrow-up"></i> 12% vs semana
                                            pasada
                                        </small>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card stat-card">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value">156</div>
                                        <div class="stat-label">Órdenes</div>
                                        <small class="text-success">
                                            <i class="fas fa-arrow-up"></i> 5% vs semana
                                            pasada
                                        </small>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card stat-card">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value">24</div>
                                        <div class="stat-label">Productos bajos</div>
                                        <small class="text-danger">
                                            <i class="fas fa-arrow-down"></i> 3% vs semana
                                            pasada
                                        </small>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                            <div class="card stat-card">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="stat-value">89</div>
                                        <div class="stat-label">Clientes nuevos</div>
                                        <small class="text-success">
                                            <i class="fas fa-arrow-up"></i> 8% vs semana
                                            pasada
                                        </small>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts and Recent Orders -->
                    <div class="row">
                        <div class="col-lg-8 ">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span>Ventas mensuales</span>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">2023</button>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-secondary active">
                                            2022
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <canvas id="salesChart" height="87"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-header">
                                    Productos más vendidos
                                </div>
                                <div class="card-body">
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span>iPhone 14 Pro</span>
                                            <span>35%</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: 35%">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span>Samsung S23</span>
                                            <span>25%</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span>Xiaomi 13</span>
                                            <span>20%</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 20%">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span>Oppo Find X5</span>
                                            <span>15%</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: 15%">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <div class="d-flex justify-content-between mb-1">
                                            <span>Otros</span>
                                            <span>5%</span>
                                        </div>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 5%">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Orders -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span>Órdenes recientes</span>
                                    <a href="ventas.html" class="btn btn-sm btn-outline-primary">Ver todas</a>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive" style="overflow-x: auto;">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Numero</th>
                                                    <th>Tabla</th>
                                                    <th>Fecha</th>
                                                    <th>Accion</th>
                                                    <th>Valor Nuevo</th>
                                                    <th>Usuario</th>
                                                    <th>Acciones</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.idauditoria)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.tabla_afectada)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.fecha)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.accion)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.valores_nuevos)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.usuario)
                                                        </td>

                                                        <td>
                                                            <button class="btn btn-sm btn-outline-primary">Ver</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Paginación -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mt-3 flex-wrap">
                            @{
                                int currentPage = (int)ViewBag.page; // Ahora es 1-based
                                int totalPages = (int)ViewBag.pages;
                                int maxVisiblePages = 5;

                                // Botón "Anterior"
                                if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a asp-action="Dashboard" asp-route-page="1" class="page-link" aria-label="First">
                                            <span aria-hidden="true">&laquo;&laquo;</span>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a asp-action="Dashboard" asp-route-page="@(currentPage - 1)" class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }

                                // Cálculo de páginas visibles
                                int startPage = Math.Max(1, currentPage - maxVisiblePages / 2);
                                int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);

                                if (endPage - startPage + 1 < maxVisiblePages)
                                {
                                    startPage = Math.Max(1, endPage - maxVisiblePages + 1);
                                }

                                // Puntos suspensivos iniciales
                                if (startPage > 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                // Botones de páginas
                                for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a asp-action="Dashboard" asp-route-page="@i" class="page-link">
                                            @i
                                            @if (i == currentPage)
                                            {
                                                <span class="visually-hidden">(current)</span>
                                            }
                                        </a>
                                    </li>
                                }

                                // Puntos suspensivos finales
                                if (endPage < totalPages)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                // Botón "Siguiente"
                                if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a asp-action="Dashboard" asp-route-page="@(currentPage + 1)" class="page-link" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a asp-action="Dashboard" asp-route-page="@totalPages" class="page-link" aria-label="Last">
                                            <span aria-hidden="true">&raquo;&raquo;</span>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/Dashboard.js"></script>

</body>

</html>
@model IEnumerable<LlamaStoreService.Models.Accesorios.Accesorio>

@{
    ViewData["Title"] = "ListaAccesorios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Accesorios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin/Dashboard.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="sidebar-brand">
                        <span class="logo-icon"><i class="fas fa-store-alt"></i></span>
                        <span class="logo-text">LlamaStore</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Administrador/Dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaProductos">
                                <i class="fas fa-mobile-alt"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaAccesorios">
                                <i class="fas fa-headphones"></i> Accesorios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaUsuarios">
                                <i class="fas fa-users"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaVentas">
                                <i class="fas fa-receipt"></i> Ventas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaReportes">
                                <i class="fas fa-chart-bar"></i> Reportes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Continuación del mismo layout, reemplazando el main-content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Gestión de Accesorios</h1>
                    @if (TempData["mensaje"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["mensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <a href="/Administrador/AgregarAccesorio" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Agregar Accesorio
                    </a>
                </div>

                <!-- Filtros -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form class="row g-3">
                            <div class="col-md-4">
                                <label for="filterMarca" class="form-label">Marca</label>
                                <select id="filterMarca" class="form-select">
                                    <option selected>Todas</option>
                                    <option>Samsung</option>
                                    <option>Apple</option>
                                    <option>Xiaomi</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="filterSistema" class="form-label">Sistema</label>
                                <select id="filterSistema" class="form-select">
                                    <option selected>Todos</option>
                                    <option>Android</option>
                                    <option>iOS</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="filterEstado" class="form-label">Estado</label>
                                <select id="filterEstado" class="form-select">
                                    <option selected>Todos</option>
                                    <option>Activo</option>
                                    <option>Inactivo</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Filtrar</button>
                                <button type="reset" class="btn btn-outline-secondary ms-2">Limpiar</button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Lista de Productos -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Lista de Accesorios</span>
                        <div class="input-group" style="width: 300px;">
                            <input type="text" class="form-control" placeholder="Buscar producto...">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tipo</th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Precio</th>
                                        <th>Precio Oferta</th>
                                        <th>Stock</th>
                                        <th>Descripcion</th>
                                        <th>Creacion</th>
                                        <th>Acctualizacion</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.idacce)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tipo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombre_marca)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.modelo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.precio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.precio_oferta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.stock)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.created_at)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.updated_at)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ActualizarAccesorio", new { id = item.idacce })"
                                                   class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <a href="@Url.Action("DeleteAccesorio", new { id = item.idacce })"
                                                   class="btn btn-sm btn-outline-danger"
                                                   title="Eliminar"
                                                   onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    <!-- Más filas... -->
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginación -->
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mt-3">
                                <div class="d-flex flex-wrap gap-2 my-3">
                                    @for (int i = 0; i < (int)ViewBag.pages; i++)
                                    {
                                        <a asp-action="ListaAccesorios" asp-route-page="@(i + 1)"
                                           class="btn @(i == (int)ViewBag.page ? "btn-success" : "btn-outline-primary") fw-semibold">
                                            @(i + 1)
                                        </a>
                                    }
                                </div>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/Dashboard.js"></script>
</body>


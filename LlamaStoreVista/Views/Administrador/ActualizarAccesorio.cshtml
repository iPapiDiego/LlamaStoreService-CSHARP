@model LlamaStoreService.Models.Accesorios.CrudAccesorio

@{
    ViewData["Title"] = "ActualizarAccesorio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Accesorios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/admin/Dashboard.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <div class="sidebar-brand">
                        <span class="logo-icon"><i class="fas fa-store-alt"></i></span>
                        <span class="logo-text">LlamaStore</span>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Administrador/Dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaProductos">
                                <i class="fas fa-mobile-alt"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaAccesorios">
                                <i class="fas fa-headphones"></i> Accesorios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaUsuarios">
                                <i class="fas fa-users"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaVentas">
                                <i class="fas fa-receipt"></i> Ventas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Administrador/ListaReportes">
                                <i class="fas fa-chart-bar"></i> Reportes
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-md-9 col-lg-10 ms-sm-auto px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Actualizar Accesorio</h1>
                    <a href="/Administrador/ListaAccesorios" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>

                <div class="form-container">
                    <form asp-action="ActualizarAccesorio">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h4>Información Básica</h4>
                                <p class="text-muted">Datos principales del Accesorio</p>
                            </div>
                            <div class="col-md-6 text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Actualizar Accesorio
                                </button>
                            </div>
                        </div>

                        <div class="row g-3">

                            <div class="col-md-3">
                                <label for="productModel" class="form-label">Id Accesorio</label>
                                <input asp-for="idacce" type="number" class="form-control" id="idacce" readonly>
                                <span asp-validation-for="idacce" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label for="productSystem" class="form-label">Tipo</label>
                                <select asp-for="idtipo" asp-items="@ViewBag.tipos" class="form-select" id="productBrand" required>
                                </select>
                                <span asp-validation-for="idtipo" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label for="productSystem" class="form-label">Tipo</label>
                                <select asp-for="idmarca" asp-items="@ViewBag.marcas" class="form-select" id="productBrand" required>
                                    
                                </select>
                                <span asp-validation-for="idmarca" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label for="productRange" class="form-label">Modelo</label>
                                <select asp-for="idmodelo" asp-items="@ViewBag.modelos" class="form-select" id="productBrand" required>
                                    
                                </select>
                                <span asp-validation-for="idmodelo" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label for="productModel" class="form-label">Precio</label>
                                <input asp-for="precio" type="text" class="form-control" id="productModel" required>
                                <span asp-validation-for="precio" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label for="productModel" class="form-label">Precio Oferta</label>
                                <input asp-for="precio_oferta" type="text" class="form-control" id="productModel" required>
                                <span asp-validation-for="precio_oferta" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label for="productModel" class="form-label">Stock</label>
                                <input asp-for="stock" type="text" class="form-control" id="productModel" required>
                                <span asp-validation-for="stock" class="text-danger"></span>
                            </div>

                            <div class="col-md-3">
                                <label for="productModel" class="form-label">Descripcion</label>
                                <input asp-for="descripcion" type="text" class="form-control" id="productModel" required>
                                <span asp-validation-for="descripcion" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label for="productImage" class="form-label">Imagen del Producto</label>
                                <input asp-for="imagen" class="form-control" type="file" id="productImage">
                                <small class="text-muted">Formatos aceptados: JPG, PNG (Máx. 2MB)</small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/Dashboard.js"></script>
</body>


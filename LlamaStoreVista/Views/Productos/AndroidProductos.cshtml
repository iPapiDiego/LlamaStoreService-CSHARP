    <script>
        function obtenerCodigoUsuario() {
            return parseInt('@User.FindFirst("codigo")?.Value ?? "0"');
        }

        function agregarAlCarrito(modelo, idcel, precio) {
            const codigo = obtenerCodigoUsuario();
            if (!codigo || codigo === 0) {
                alert("Debes iniciar sesión para agregar al carrito.");
                return;
            }

            fetch('/AgregarCart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    codigo: codigo,
                    idcel: idcel,
                    modelo: modelo,
                    cantidad: 1,
                    precio_oferta: precio
                })
            })
            .then(response => {
                if (!response.ok) throw new Error("Error al agregar al carrito.");
                actualizarOffcanvas();
            })
            .catch(error => {
                console.error("Error en fetch:", error);
            });
        }

        function actualizarOffcanvas() {
            const codigo = obtenerCodigoUsuario();
            if (!codigo || codigo === 0) return;

            fetch(`/AgregarCart/GetCart?codigoUsuario=${codigo}`)
                .then(response => response.json())
                .then(data => {
                    const contenedor = document.getElementById("carrito-items");
                    const totalElemento = document.getElementById("carrito-total");
                    contenedor.innerHTML = "";

                    let total = 0;

                    if (!data || data.length === 0) {
                        contenedor.innerHTML = '<div class="text-muted text-center mt-3">Tu carrito está vacío.</div>';
                    } else {
                        data.forEach(item => {
                            const itemHTML = `
                                <div class="list-group-item d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>${item.modelo}</strong><br>
                                        <small>Cantidad: ${item.cantidad}</small>
                                    </div>
                                    <div class="d-flex flex-column align-items-end">
                                        <span class="text-success fw-semibold">S/ ${(item.precio_oferta * item.cantidad).toFixed(2)}</span>
                                        <button class="btn btn-sm btn-outline-danger mt-1" title="Eliminar"
                                                onclick="eliminarDelCarrito(${item.idCarrito})">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                </div>`;
                            contenedor.innerHTML += itemHTML;
                            total += item.precio_oferta * item.cantidad;
                        });
                    }

                    totalElemento.textContent = `S/ ${total.toFixed(2)}`;
                })
                .catch(err => {
                    console.error("Error al cargar carrito:", err);
                });
        }

        // ✅ Escucha cuando se abre el carrito
        const offcanvas = document.getElementById('offcanvasCart');
        offcanvas.addEventListener('show.bs.offcanvas', actualizarOffcanvas);

        // ✅ Función unificada para eliminar producto
        async function eliminarDelCarrito(idCarrito) {
            if (!confirm("¿Estás seguro de eliminar este producto del carrito?")) return;

            const response = await fetch(`/Carrito/EliminarCarrito?idCarrito=${idCarrito}`, {
                method: 'GET'
            });

            if (response.ok) {
                // Actualiza carrito según el contexto
                if (window.location.pathname.includes("IndexCarrito")) {
                    location.reload(); // recarga toda la página si estás en la vista de carrito completa
                } else {
                    actualizarOffcanvas(); // solo actualiza el offcanvas
                }
            } else {
                alert("No se pudo eliminar el producto.");
            }
        }
    </script>



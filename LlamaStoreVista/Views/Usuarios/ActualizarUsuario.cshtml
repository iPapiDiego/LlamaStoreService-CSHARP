                        <div class="error-message" id="apellido-error">Ingrese un apellido válido</div>
                        <span asp-validation-for="apellido" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="input-group">
                        <i class="fas fa-users"></i>
                        <input asp-for="correo" type="email" name="correo" id="correo" placeholder="Correo electrónico" required />
                        <div class="error-message" id="correo-error">Ingrese un correo válido</div>
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <label for="fnacim">Fecha de nacimiento</label>
                    <div class="input-group">
                        <i class="fas fa-calendar-alt"></i>
                        <input asp-for="fnacim" type="date" name="fnacim" id="fnacim" required max="2005-12-31" />
                        <div class="error-message" id="fnacim-error">Debes ser mayor de 18 años</div>
                        <span asp-validation-for="fnacim" class="text-danger"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input asp-for="clave" type="password" name="clave" id="clave"
                               placeholder="Nueva contraseña (mínimo 8 caracteres)" minlength="8" required
                               pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$"
                               title="Debe contener al menos una mayúscula, una minúscula y un número" />
                        <span asp-validation-for="clave" class="text-danger"></span>
                        <div class="password-strength" id="password-strength">
                            <div class="strength-bar" id="strength-bar"></div>
                        </div>
                        <div class="error-message" id="clave-error">
                            Mínimo 8 caracteres con mayúscula, minúscula y

@model LlamaStoreVista.Models.Admin.AdminViewModel

<table class="data-table">
    <thead>
        <tr>
            <th>Boleta</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Nombre</th>
            <th>Subtotal</th>
            <th>IGV</th>
            <th>Total</th>
            <th>Metodo Pago</th>
            <th>Estado</th>
            <th>Detalle</th>
            <th>Tipo Producto</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Uni</th>
            <th>Descuento</th>
            <th>Precio Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.boletas)
        {
            <tr>
                <td>@b.num_bol</td>
                <td>@b.fch_bol</td>
                <td>@b.cod_cliente</td>
                <td>@b.nombre</td>
                <td>@b.subtotal</td>
                <td>@b.igv</td>
                <td>@b.total</td>
                <td>@b.metodo_pago</td>
                <td><span class="status completed">@b.estado_pago</span></td>
                <td>@b.iddetalle</td>
                <td>@b.tipo_producto</td>
                <td>@b.id_producto</td>
                <td>@b.cantidad</td>
                <td>@b.precio_unitario</td>
                <td>@b.descuento</td>
                <td>@b.precio_final</td>
                <td>
                    <button class="action-btn view-btn"><i class="fas fa-eye"></i></button>
                    <button class="action-btn print-btn"><i class="fas fa-print"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
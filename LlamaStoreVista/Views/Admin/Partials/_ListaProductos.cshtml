@model LlamaStoreVista.Models.Admin.AdminViewModel

<table class="data-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Sistema</th>
            <th>Precio</th>
            <th>Precio Oferta</th>
            <th>Gama</th>
            <th>Stock</th>
            <th>Estado</th>
            <th>Creacion</th>
            <th>Actualizacion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Productos)
        {
            <tr>
                <td>@p.idcel</td>
                <td>@p.nombre_marca</td>
                <td>@p.modelo</td>
                <td>@p.tipo_sistema</td>
                <td>@p.precio</td>
                <td>@p.precio_oferta</td>
                <td>@p.tipo_gama</td>
                <td>@p.stock</td>
                <td><span class="status active">@p.descripcion</span></td>
                <td>@p.created_at</td>
                <td>@p.updated_at</td>
                <td>
                    <button class="action-btn edit-btn"><i class="fas fa-edit"></i></button>
                    <button class="action-btn delete-btn"><i class="fas fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>